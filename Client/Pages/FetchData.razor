@page "/fetchdata"

@using CloudCopy.Shared.Forms

@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.IpAddress</td>
                    <td>@forecast.Body</td>
                    <td>@forecast.MimeType</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private CopiedForm[] forecasts;

    protected override async Task OnInitializedAsync()
    {
        @* forecasts = await Http.GetFromJsonAsync<CopiedForm[]>("WeatherForecast"); *@
    }

}
